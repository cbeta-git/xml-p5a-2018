<pb ed="X" xml:id="X59.1079.0248b" n="0248b"/>
<lb ed="X" n="0248b01"/>
<milestone unit="juan" n="1"/>
<lb ed="X" n="0248b02"/>
<lb ed="X" n="0248b03"/>
